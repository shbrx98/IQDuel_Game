{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts","**/*.mts", "**/*.tsx", ".next/types/**/*.ts", "src/server/index.mts", "src/models/User.ts", "src/models/Game.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
